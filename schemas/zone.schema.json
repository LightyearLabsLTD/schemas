{
  "$id": "https://schema.lightyearlabs.net/schemas/zone.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Zone",
  "type": "object",

  "repository": "zone",
  "mappers": [
    "identity"
  ],

  "properties": {
    "targets": {
      "type": "array",
      "items": { "type": "string" }
    },

    "identity": {
      "type": "object",
      "properties": {
        "key": { "type": "string" },
        "name": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["key", "name"]
    },

    "rarity": {
      "type": "object",
      "properties": {
        "type": { "type": "string" }
      },
      "required": ["type"]
    },

    "display": {
      "type": "object",
      "properties": {
        "items": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "$ref": "https://schema.lightyearlabs.net/schemas/minecraft/itemstack.schema.json"
            }
          }
        }
      },
      "required": ["items"]
    },

    "name": { "type": "string" },

    "region": {
      "$ref": "https://schema.lightyearlabs.net/schemas/minecraft/region.schema.json"
    },

    "teleportPosition": {
      "$ref": "https://schema.lightyearlabs.net/schemas/minecraft/position.schema.json"
    },

    "entranceMessage": {
      "$ref": "https://schema.lightyearlabs.net/schemas/minecraft/interactive-message.schema.json"
    },

    "exitMessage": {
      "$ref": "https://schema.lightyearlabs.net/schemas/minecraft/interactive-message.schema.json"
    },

    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },

    "ignoreIfInside": {
      "type": "array",
      "items": { "type": "string" }
    }
  },

  "required": [
    "targets",
    "identity",
    "rarity",
    "display",
    "name",
    "region"
  ]
}