{
  "$id": "https://schema.lightyearlabs.net/schemas/zone.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Zone",
  "type": "object",

  "repository": "zone",
  "mappers": [
    "identity"
  ],

  "properties": {
    "targets": {
      "type": "array",
      "items": { "type": "string" }
    },

    "identity": {
      "$ref": "https://schema.lightyearlabs.net/schemas/identity.schema.json"
    },

    "rarity": {
      "type": "object",
      "properties": {
        "type": { "type": "string" }
      },
      "required": ["type"]
    },

    "zone": {
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "region": { "$ref": "https://schema.lightyearlabs.net/schemas/minecraft/region.schema.json" },
            "teleportPosition": { "$ref": "https://schema.lightyearlabs.net/schemas/minecraft/position.schema.json" },
            "entranceMessage": { "$ref": "https://schema.lightyearlabs.net/schemas/message.schema.json" },
            "exitMessage": { "$ref": "https://schema.lightyearlabs.net/schemas/message.schema.json" },
            "ignoreIfInside": { "type": "array", "items": { "type": "string" } }
        },

        "required": [ "name", "region", "teleportPosition" ]
    }
  },

  "required": [
    "zone",
    "identity"
  ]
}